<div class="columns is-variable is-12">
  <div class="column is-half">
    {{> home/section-title ctx=contact }}
    <p>
      Queremos conversar sobre os seus projetos.
    </p>
    <p>
      Use essa área para tirar dúvidas, enviar questões e comentários.
    </p>
  </div>
  <div class="column is-half">
    <div class="box">
      <form id="form-contato" action="" method="POST">
        <div class="field">
          <label class="label">Nome*</label>
          <div class="control">
            <input name="nome" class="input" type="text" placeholder="" value="" required />
          </div>
        </div>
        <div class="field">
          <label class="label">Email*</label>
          <div class="control">
            <input name="email" class="input" type="email" placeholder="" value="" required />
          </div>
        </div>
        <div class="field">
          <label class="label">Telefone*</label>
          <div class="control">
            <input name="telefone" class="input" type="tel" required />
          </div>
        </div>
        <div class="field">
          <label class="label">Mensagem*</label>
          <textarea name="mensagem" class="textarea has-fixed-size" placeholder="" required></textarea>
        </div>
        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <button class="button">
              Enviar
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>